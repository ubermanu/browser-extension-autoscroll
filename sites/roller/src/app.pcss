@tailwind base;
@tailwind components;
@tailwind utilities;

.logo {
  position: relative;
  transform-origin: left center;
  animation: drift 1.4s ease forwards;
}

@keyframes drift {
  30% {
    transform: translateX(10%);
  }
  50% {
    transform: translateX(-50%);
  }
  90% {
    transform: translateX(0) rotate(-10deg);
  }
  100% {
    transform: translateX(0);
  }
}
